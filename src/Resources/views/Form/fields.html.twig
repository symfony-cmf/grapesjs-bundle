{% block cmf_grapes_edit_widget %}
    {% block cmf_grapes_edit_widget_js %}
        {% block cmf_grapes_edit_widget_assets -%}
			{% block stylesheets -%}
				<link rel="stylesheet" href="{{ asset('bundles/cmfgrapesjs/css/grapes.min.css') }}" type="text/css">
			{%- endblock %}
			{% block javascripts -%}
				<script src="https://cdnjs.cloudflare.com/ajax/libs/grapesjs/0.13.5/grapes.min.js"></script>
				<script src="{{ asset('bundles/cmfgrapesjs/js/cmf_grapes.js') }}"></script>
			{%- endblock %}
		{%- endblock %}

		<script type="text/javascript">
			jQuery(function ($) {
				$('#{{ id }}-cmf-grapes').cmfGrapes({
					grapes_options: {
						style: '.txt-red{colo:red}'
					},
					root_node: '{{ root_node }}',
					form_id: '{{ id }}'
				});
			});
		</script>

		{% endblock %}

		<div id="{{ id }}-cmf-grapes-data" style="display: none">
            {{ form_widget(form) }}
		</div>

		<div id="{{ id }}-cmf-grapes"></div>
{% endblock %}
